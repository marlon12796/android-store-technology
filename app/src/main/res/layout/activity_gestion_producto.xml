<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GestionProductoActivity"
    android:background="@color/white"
    android:id="@+id/gestion_producto_main">

    <!-- Toolbar sin sombra -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="0dp"
        app:title="Gestión de Productos"
        app:titleTextColor="@android:color/white" />

    <!-- Contenido Principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card para la búsqueda sin sombra -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etCodigoBusqueda"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Código del producto"
                        android:inputType="text"
                        android:padding="12dp"
                        android:background="@drawable/edit_text_background"/>

                    <Button
                        android:id="@+id/btnBuscar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buscar"
                        android:padding="14dp"
                        android:layout_marginLeft="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card con los datos del producto sin sombra -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etCodigo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Código del producto"
                        android:inputType="text"
                        android:padding="12dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/edit_text_background"/>

                    <EditText
                        android:id="@+id/etNombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre"
                        android:inputType="text"
                        android:padding="12dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/edit_text_background"/>

                    <EditText
                        android:id="@+id/etDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Descripción"
                        android:inputType="text"
                        android:padding="12dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/edit_text_background"/>
                    <Spinner
                        android:id="@+id/spinnerCategoria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:padding="12dp"
                        android:background="@drawable/edit_text_background"
                        android:textColor="@android:color/darker_gray"/>

                    <EditText
                        android:id="@+id/etPrecio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Precio"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/edit_text_background"/>

                    <EditText
                        android:id="@+id/etStock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Stock"
                        android:inputType="number"
                        android:padding="12dp"
                        android:background="@drawable/edit_text_background"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Botones de acción -->
            <Button
                android:id="@+id/btnAgregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar Producto"
                android:padding="14dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Producto"
                android:padding="14dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar Producto"
                android:padding="14dp"
                android:layout_marginBottom="10dp"/>
            <include
                layout="@layout/custom_back_button"
                android:id="@+id/button_regresar_management"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
