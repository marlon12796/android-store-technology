<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GestionVentaActivity"
    android:id="@+id/ventaMain"
    android:background="@color/white">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="0dp"
        app:title="Gestión de Ventas"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Card para la búsqueda sin sombra -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etCodigoBusquedaVenta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Cd. Búsqueda Venta"
                        android:inputType="text"
                        android:padding="12dp"
                        android:background="@drawable/edit_text_background"/>

                    <Button
                        android:id="@+id/btnBuscarVenta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buscar"
                        android:padding="14dp"
                        android:layout_marginLeft="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etCodigoVenta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Código de Venta"
                        android:inputType="text"
                        android:padding="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edit_text_background"/>

                    <EditText
                        android:id="@+id/etNroDocumento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Número de Documento"
                        android:inputType="text"
                        android:padding="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edit_text_background"/>

                    <EditText
                        android:id="@+id/etFecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Fecha"
                        android:inputType="date"
                        android:padding="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edit_text_background"/>

                    <EditText
                        android:id="@+id/etCliente"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cliente"
                        android:inputType="text"
                        android:padding="12dp"
                        android:background="@drawable/edit_text_background"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Datos del Producto -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etCodigoProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Código del Producto"
                        android:inputType="text"
                        android:padding="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edit_text_background"/>

                    <EditText
                        android:id="@+id/etPrecioProducto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Precio del Producto"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edit_text_background"/>

                    <EditText
                        android:id="@+id/etCantidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Cantidad"
                        android:inputType="number"
                        android:padding="12dp"
                        android:background="@drawable/edit_text_background"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card: Resumen de Venta -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cbDescuento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aplicar 10% de descuento"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:id="@+id/tvSubtotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Subtotal: "
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edit_text_background"/>

                    <TextView
                        android:id="@+id/tvIgv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="IGV: "
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/edit_text_background"/>

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total: "
                        android:textSize="16sp"
                        android:padding="12dp"
                        android:background="@drawable/edit_text_background"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botones de acción -->
            <Button
                android:id="@+id/btnRegistrarVenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar Venta"
                android:padding="14dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnEliminarVenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eliminar Venta"
                android:padding="14dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
